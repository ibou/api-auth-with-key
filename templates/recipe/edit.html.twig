{% extends 'base.html.twig' %}

{% block title %}
    Hi - {{ parent() }} - Edit recipe
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Editing {{ recipe.title}} </h1>
        <turbo-frame id="recipe_{{ recipe.id }}">
            {{ form(form, {action: path('recipe.edit', {id: recipe.id})}) }}
        </turbo-frame>
    </div>
{% endblock %}
